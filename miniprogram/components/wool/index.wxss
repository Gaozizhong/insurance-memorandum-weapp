/* components/stuff/index.wxss */

.container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: auto;
    height: 450rpx;
    border-radius: 10px;
    margin-top: 10rpx;
    overflow: hidden;
    box-shadow: 2px 2px 3px #e3e3e3;
    background-color: #fff;
}

.image {
    width: 100%;
    height: 350rpx;
    border-top-left-radius: 10px;
}

.title {
    margin-left: 10rpx;
    margin-top: 10rpx;
    font-size: 10pt;
    /* 定义为自适应布局*/
    display: -webkit-box;
    /* 允许在单词内换行 */
    word-break: break-all;
    /* 超出文字用省略号代替*/
    text-overflow: ellipsis;
    /* 多出部分隐藏 */
    overflow: hidden;
    /* 竖直方向的超出和隐藏 */
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}

.address{
    margin-left: 10rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    color: #a1a1a1;
    font-size: 10pt;
    /* 定义为自适应布局*/
    display: -webkit-box;
    /* 允许在单词内换行 */
    word-break: break-all;
    /* 超出文字用省略号代替*/
    text-overflow: ellipsis;
    /* 多出部分隐藏 */
    overflow: hidden;
    /* 竖直方向的超出和隐藏 */
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}