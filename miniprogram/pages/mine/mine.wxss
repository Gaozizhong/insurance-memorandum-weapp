/* pages/mine/mine.wxss */
.container {
    /* 总容器 */
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.head-container {
    /* 头部容器 */
    width: 94%;
    height: 200rpx;
    margin-top: 20rpx;
    border-radius: 10px;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    box-shadow: 2px 2px 3px #e3e3e3;
}