/* pages/publish/publish.wxss */
.container{
    /* 总容器 */
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .row-container{
    /* row二级容器的公共属性 */
    width: 705rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    background-color: #fff;
  }
  
  .column-container{
    /* column二级容器的公共属性 */
    width: 705rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #fff;
  }
  
  .first-container{
    /* 第一个二级容器的专有属性 */
    width: 705rpx;
    height: fit-content;
    margin-top: 5rpx;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    box-shadow: 2px 0px 3px #e3e3e3;
  }
  
  .info-container{
    /* 中间的二级容器的专有属性 */
    margin-top: 5rpx;
    box-shadow: 2px 0px 3px #e3e3e3;
  }
  
  .last-container{
    /* 最后一个二级容器的专有属性 */
    margin:5rpx 0 20rpx 0;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    box-shadow: 2px 2px 3px #e3e3e3;
  }
  
  .input-area{
    width: 580rpx;
  }
  
  .icon{
    /* 图标的属性 */
    width: 50rpx;
    height: 50rpx;
    margin: 25rpx;
  }
  
  .tag{
    width: 130rpx;
  }
  
  .image-gride-view{
      display: flex;
      align-items: center;
      justify-content: flex-start;
      flex-wrap: wrap;
      width: 100%;
  }
  
  .image-column-3{
      width: 195rpx;
      height: 195rpx;
      text-align: center;
      margin: 20rpx;
  }
  
  .add-photo-container{
    width: 195rpx;
    height: 195rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 20rpx;
  }
  
  .camera{
    /* 照相机图标的属性 */
    width: 50rpx;
    height: 50rpx;
    margin-top: 30rpx;
    margin-bottom: 15rpxs;
  }
  
  .add-photo{
    font-size: x-small;
    color: #8A8A8A;
    margin-bottom: 30rpx;
  }
  
  .uploader_image {
    display: block;
    width: 195rpx;
    height: 195rpx;
  }
  
  .button-ok{
    /* 提交按钮的属性 */
    width: 94%;
    margin:50rpx 0 50rpx 0;
  }

  .add{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .add-icon {
    height: 70rpx;
    width: 70rpx;
    margin-top: 10rpx;
  }
  
  .add-text {
    margin-top: 6rpx;
    font-size: 24rpx;
    font-weight: bold;
    color: #bfbfbf;
  }